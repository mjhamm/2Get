<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/about_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:contentDescription="@string/about_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:background="@android:color/transparent"
                android:onClick="close_about"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/about_us"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"/>

        </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/about_logo"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:src="@drawable/get_logo_full"
        app:layout_constraintTop_toBottomOf="@id/about_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/_2_get_logo" />

    <TextView
        android:id="@+id/legal_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/legal"
        app:layout_constraintTop_toBottomOf="@id/about_logo"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/trans_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/legal_main"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="start|center_vertical"
        android:fontFamily="@font/roboto_condensed_regular"
        android:backgroundTint="@color/accentGreen"
        android:textColor="@android:color/white"
        android:text="@string/transparency_message"
        android:textAllCaps="false"/>

