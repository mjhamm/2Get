<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/makeList_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:scaleX="1.15"
        android:scaleY="1.15"
        android:clickable="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:focusableInTouchMode="false"
        android:button="@drawable/checkbox_drawable"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/makeList_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/makeList_item_checkbox"
        android:fontFamily="roboto_condensed_regular"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:text="@string/test_child_item"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>